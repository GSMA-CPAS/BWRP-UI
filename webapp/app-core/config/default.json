{

  "organization": {
    "mspid": "",
    "title": ""
  },

  "log": {
    "level": "info",
    "file": "",
    "console": true
  },

  "session": {
    "secret": "secret123",
    "name": "nomad.session",
    "resave": false,
    "saveUninitialized": false,
    "rolling": true,
    "timeout": 1800000,
    "checkExpirationInterval": 3600000,
    "cookie": {
      "secure": true,
      "httpOnly": true,
      "sameSite": "strict"
    }
  },

  "csrfProtection": {
    "enabled": false,
    "cookie": {
      "secure": true,
      "httpOnly": true,
      "sameSite": "strict"
    }
  },

  "cspDirectives": {
    "defaultSrc": ["'self'"],
    "styleSrc": ["'self'", "'unsafe-inline'"],
    "imgSrc": ["'self'", "data:"],
    "childSrc": ["'self'", "blob:"]
  },

  "database": {
    "pooling": true,
    "connection": {
      "host": "127.0.0.1",
      "port": 3306,
      "user": "",
      "password": "",
      "database": ""
    }
  },

  "apps": {
  },

  "services": {
    "LoginService": {
      "enabled": true,
      "classPath": "/login/v1/LoginService",
      "route": "/api/v1/auth",
      "maxLoginAttempts": 5,
      "rateLimit": {
        "enabled": true,
        "windowMS": 900000,
        "maxPerIP": 100,
        "headers": false
      },
      "useBackendAdapters": [
        {"type": "user", "name": "UserManagementAdapter"}
      ]
    },
    "UserManagementService": {
      "enabled": true,
      "classPath": "/users/v1/UserManagementService",
      "route": "/api/v1/users",
      "useBackendAdapters": [
        {"type": "user", "name": "UserManagementAdapter"}
      ]
    },
    "IdentityService": {
      "enabled": true,
      "classPath": "/identity/v1/IdentityService",
      "route": "/api/v1/identities",
      "useBackendAdapters": [
        {"type": "certAuth", "name": "CertAuthAdapter"},
        {"type": "identity", "name": "IdentityAdapter"}
      ]
    },
    "AppService": {
      "enabled": true,
      "classPath": "/apps/v1/AppService",
      "route": "/api/v1/apps"
    },
    "BlockchainService": {
      "enabled": false,
      "classPath": "/blockchain/v1/BlockchainService",
      "route": "/api/v1/blockchain",
      "useBackendAdapters": [
        {"type": "blockchain", "name": "BlockchainAdapter"},
        {"type": "localStorage", "name": "LocalStorageAdapter"},
        {"type": "user", "name": "UserManagementAdapter"},
        {"type": "certAuth", "name": "CertAuthAdapter"}
      ]
    },
    "CommonService": {
      "enabled": true,
      "classPath": "/common/v1/CommonService",
      "route": "/api/v1/common",
      "useBackendAdapters": [
        {"type": "user", "name": "UserManagementAdapter"},
        {"type": "certAuth", "name": "CertAuthAdapter"},
        {"type": "common", "name": "CommonAdapter"}
      ]
    },
    "ProxyService": {
      "enabled": false,
      "classPath": "/proxy/v1/ProxyService",
      "route": "/proxy"
    },
    "SwaggerService": {
      "enabled": false,
      "classPath": "/swagger/v1/SwaggerService",
      "route": "/api/docs"
    }
  },

  "backendAdapters": {
    "UserManagementAdapter": {
      "classPath": "/adapter/userManagement/v1/UserManagementAdapter",
      "config": {
        "initialAdminPassword": "admin",
        "passwordHashOptions" : {
          "type": "argon2id",
          "timeCost": 256,
          "memoryCost": 1024,
          "parallelism": 1,
          "saltLength": 32
        },
        "passwordKeyDerivationOptions" : {
          "type": "argon2id",
          "timeCost": 4096,
          "memoryCost": 9,
          "parallelism": 1,
          "saltLength": 32
        }
      }
    },
    "IdentityAdapter": {
      "classPath": "/adapter/identity/v1/IdentityAdapter",
      "config": {
      }
    },
    "CertAuthAdapter": {
      "classPath": "/adapter/ca/v1/CertAuthAdapter",
      "config": {
        "url": "",
        "caName": "",
        "adminEnrollmentId": "admin",
        "adminEnrollmentSecret": "",
        "userEnrollmentSecret": "",
        "userEnrollmentRole": "client",
        "userEnrollmentAffiliation": "",
        "userEnrollmentMax": -1,
        "tlsOptions": {
          "trustedRoots": [],
          "verify": false
        },
        "hsm": {
          "enabled": false,
          "lib": "/usr/local/lib/softhsm/libsofthsm2.so",
          "pin": "",
          "slot": 0,
          "usertype": 1,
          "readwrite": false
        }
      }
    },
    "SessionManagementAdapter": {
      "classPath": "/adapter/session/mysql/SessionManagementAdapter",
      "config": {
      }
    },
    "BlockchainAdapter": {
      "classPath": "/adapter/blockchain/v1/BlockchainAdapter",
      "config": {
        "url": "",
        "webhooks": []
      }
    },
    "LocalStorageAdapter": {
      "classPath": "/adapter/storage/v1/LocalStorageAdapter",
      "config": {
      }
    },
    "CommonAdapter": {
      "classPath": "/adapter/common/v1/CommonAdapter",
      "config": {
        "url": ""
      }
    }
  }
}